        <input type="text" class="form-control" name="author" id="">
        <label>Content</label>
        <input type="text" class="form-control" name="content" id="">
        <label>Tags</label>
        <input type="text" class="form-control" name="tags" id="">
        <label>Url Short Tags</label>
        <input type="text" class="form-control" name="urlTags"  >
        <br/>
        <button type="submit" class="btn btn-primary btn-block" >UPDATE</button>
        </div>
    </form>
</section>
